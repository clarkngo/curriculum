<!DOCTYPE html>
<html>
  <head>
    <title>Curriculum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Curriculum</a>
      <button class="navbar-toggler" 
              type="button" 
              data-toggle="collapse"       
              data-target="#navbarSupportedContent" 
              aria-controls="navbarSupportedContent" 
              aria-expanded="false" 
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to 'Courses', courses_path, class: 'nav-link' %>
          </li>
        </ul>
        <ul class="navbar-nav justify-content-end">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Dashboard", dashboard_index_path(current_user), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Welcome back #{current_user.email}", '', class: 'nav-link' %>
              </li>
              <li class="divider-vertical"></li>
              <li class="nav-item">
                <%= link_to "Suggest New Course", new_course_path, class: 'nav-link' %>
              </li>  
              <li class="nav-item">  
                <%= link_to "Sign out", destroy_user_session_path, 
                  :method => :delete, 
                  class: 'nav-link' %>
              </li>
            <% else %>
              <li class='nav-item'>
                <%= link_to "Sign up", new_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="divider-vertical"></li>
              <li class='nav-item'>
                <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <div class='container'>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </div>
  </body>
</html>
