<div class="booyah-box col-10 offset-1">
  <dl class="row">
    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9"><%= @course.category.category %></dd>
    <br/>
    <br/>
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9"><%= @course.name %></dd>
    <br/>
    <br/>
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9"><%= @course.description %></dd>
  </dl>
  
  <div class="float-right">
    <%= link_to 'Edit', '', class: 'btn btn-primary' %>
    <%= link_to 'Destroy', '', method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
  </div>  
</div>
