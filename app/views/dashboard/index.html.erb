
<% if user_signed_in? %>

  <br/>
  <br/>
  <h2 class="text-center" style="color: white">List of Comments</h2>
  <br/>
  <% if @comments.empty? %>
    <h1 class="hero-text">You have not commented to any courses =)</h1>
  <% else %>
    <table class="table table-striped table-dark">
      <thead> 
        <tr>
          <th scope="col">Comments</th>
          <th scope="col">Courses</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <th scope="row"><%= comment.message %></th>
            <th><%= comment.course.name %></th>
            <th><%= link_to 'Show Course', course_path(comment.course), class: 'btn btn-info' %></th>
            <th><%= link_to 'Edit', edit_course_comment_path(comment, comment.id), class: 'btn btn-primary' %></th>
            <th><%= link_to 'Delete', course_comment_path(comment, comment.id), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
