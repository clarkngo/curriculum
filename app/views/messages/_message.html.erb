<!-- load messages in chatroom -->
<br/>
<div class="media">
  <div class="media-body">
    <div class="row">
      <div class="col-2">
        <% if message.user&.avatar.present? %>
          <%= image_tag message.user&.avatar.thumb.url, class: 'profile-image' %>
        <% else %>
          <%= image_tag 'default-profile-picture-50x50.png', class: 'profile-image' %>
        <% end %>
      </div>
      <div class="col-10">
        <p style="font-size:10px;" class="mt-0">
          <% if message.user&.first_name? %>
            <%= message.user.full_name %>
          <% else %>
            Anonymous
          <% end %>
        </p>
        <%= markdown(message.content) %>
        <p style="font-size:8px; text-align:right;"><%= message.created_at %></p>
        <hr/>
      </div>
    </div>
  </div>
</div>
